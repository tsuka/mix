#!/bin/sh
readlink_f () {
  cd `dirname $1` > /dev/null
  local filename=`basename $1`
  if [ -h "$filename" ]; then
    readlink_f `readlink $filename`
  else
    echo "`pwd -P`/$filename"
  fi
}

SELF=`readlink_f $0`
SCRIPT_PATH=`dirname $SELF`/..
elixir -pa "$SCRIPT_PATH/exbin" -e "Mix.start" -- "$@"
